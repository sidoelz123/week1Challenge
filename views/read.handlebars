<div class="">
  <div class="flex flex-col items-center min-h-screen pt-6 bg-gray-100 sm:justify-center sm:pt-0">
    <div class="w-full px-16 py-20 mt-6 overflow-hidden bg-white rounded-lg lg:max-w-4xl">

      <div class="mb-4">
        <h1 class="font-serif text-3xl font-bold underline decoration-gray-400">Tentang Buku</h1>
      </div>

      <div class="w-full px-6 py-4 bg-white rounded shadow-md ring-1 ring-gray-900/10">
        <form method="GET" action="/buku/:buku_id">
          <!-- Title -->
          {{#each data}}
          <div>
            <h3 class="text-2xl font-semibold">{{judul}}</h3>
            <div class="flex items-center mb-4 space-x-2">
              <p class="text-xs flex text-gray-500">Penulis : {{penulis}} 
                <br> Kategori : {{nama_kategori}} </p>
            </div>
            <p class="text-base text-gray-700">{{deskripsi}}</p>
          </div>
          {{/each}}
        </form>
      </div>
      <div class="px-2 py-2 w-24 mt-[20px] text-center text-sm font-semibold text-gray-100 bg-gray-400  rounded-md shadow-md hover:bg-gray-600 focus:outline-none focus:border-gray-900 focus:ring ring-gray-300"><a href="/" >kembali</a></div>
    </div>
  </div>
</div>
